@model Chat.FE.Web.Areas.Account.Models.UserNamePasswordVm
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(p => p.Username)
                @Html.EditorFor(p => p.Username, new { @class="form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.Password)
                @Html.EditorFor(p => p.Password, new { @class = "form-control" })
            </div>
            <input type="submit" class="btn btn-primary" />
        }

    </div>
</div>


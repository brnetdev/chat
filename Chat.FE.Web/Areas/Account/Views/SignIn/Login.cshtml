@model Chat.FE.Web.Areas.Account.Models.UserNamePasswordVm
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        @using (Html.BeginForm("Login", "SignIn", FormMethod.Post, new { @class="form" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>Logowanie</legend>
                <div class="form-group">
                    @Html.LabelFor(p => p.Username)
                    @Html.TextBoxFor(p => p.Username, new { @class = "form-control ", @placeholder="Wprowadź login" })
                    <div>
                        @Html.ValidationMessageFor(p => p.Username)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.Password)
                    @Html.PasswordFor(p => p.Password, new { @class = "form-control ", @placeholder = "Wprowadź hasło" })
                    <div>
                        @Html.ValidationMessageFor(p => p.Password)
                    </div>
                </div>
                <div class="form-group-lg">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block form-control">Zaloguj</button>
                    </div>
                    <div>
                        @Html.ActionLink("Rejestracja", "AddUser", "Account", new { area="Account" }, new { @class="btn btn-danger btn-block form-control"})
                    </div>
                </div>
            </fieldset>
        }

    </div>
    <div class="col-lg-4"></div>
</div>

